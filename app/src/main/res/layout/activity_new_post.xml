<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:id="@+id/reveal_V"
             android:background="@color/accent"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:visibility="invisible"
             tools:context="com.lovecats.catlover.capsules.newpost.view.NewPostActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linear_container"
            android:layout_width="match_parent"
            android:animateLayoutChanges="true"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="72dp"
                android:paddingTop="72dp"
                android:text="Create New Post"
                android:textColor="@color/white"
                android:textSize="32dp" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/caption_ET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="72dp"
                android:layout_marginRight="72dp"
                android:layout_marginTop="16dp"
                android:hint="Enter Caption"
                app:baseColor="@android:color/white"
                app:floatingLabel="highlight"
                app:maxCharacters="20"
                app:primaryColor="@color/white"
                app:singleLineEllipsis="true" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:animateLayoutChanges="true"
                android:background="@color/accent_dark">

                <ImageView
                    android:id="@+id/preview_IV"
                    android:layout_margin="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="172dp"
                    android:maxHeight="72dp"
                    android:scaleType="centerInside"
                    android:visibility="gone"/>

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/link_ET"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_below="@id/preview_IV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="72dp"
                    android:layout_marginRight="72dp"
                    android:hint="Enter URL"
                    android:visibility="gone"
                    app:baseColor="@android:color/white"
                    app:floatingLabel="highlight"
                    app:primaryColor="@color/white"
                    app:singleLineEllipsis="true" />

                <ImageButton
                    android:id="@+id/clear_link_B"
                    android:layout_alignTop="@id/link_ET"
                    android:layout_alignParentRight="true"
                    android:visibility="gone"
                    android:layout_margin="16dp"
                    style="@style/CallToActionButtonStyle"
                    android:src="@drawable/ic_backspace_white_18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageButton
                    android:id="@+id/clear_B"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="16dp"
                    style="@style/CallToActionButtonStyle"
                    android:src="@drawable/ic_clear_white_24dp"
                    android:layout_width="wrap_content"
                    android:visibility="gone"
                    android:layout_height="wrap_content"/>

                <HorizontalScrollView
                    android:id="@+id/choices_HSV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="8dp"
                        android:paddingLeft="40dp"
                        android:paddingRight="40dp"
                        android:paddingTop="8dp">

                        <Button
                            android:id="@+id/take_photo_B"
                            style="@style/NewPostButtonStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableTop="@drawable/ic_camera_alt_white_48dp"
                            android:text="New photo"/>

                        <Button
                            android:id="@+id/upload_image_B"
                            style="@style/NewPostButtonStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableTop="@drawable/ic_collections_white_48dp"
                            android:text="From gallery"/>

                        <Button
                            android:id="@+id/link_image_B"
                            style="@style/NewPostButtonStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableTop="@drawable/ic_link_white_48dp"
                            android:text="From link"/>

                    </LinearLayout>
                </HorizontalScrollView>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="56dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/cancel_B"
                    style="@style/CallToActionButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:text="Cancel" />

                <Button
                    android:id="@+id/submit_B"
                    style="@style/CallToActionButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:text="Publish" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:paddingTop="@dimen/status_bar_size"/>
</FrameLayout>
