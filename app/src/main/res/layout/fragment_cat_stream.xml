<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <com.github.ksoichiro.android.observablescrollview.ObservableRecyclerView
        android:id="@+id/cats_stream_RV"
        android:clipToPadding="false"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:layout_height="match_parent"
        android:layout_width="match_parent"/>

    <android.support.v7.widget.CardView
        android:id="@+id/logged_out_empty_V"
        android:visibility="gone"
        android:layout_marginTop="@dimen/dashboard_scroll_padding"
        android:elevation="5dp"
        android:foreground="@drawable/fab_selector_primary"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image"
                android:src="@drawable/logged_out"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="224dp"/>

            <TextView
                android:textSize="24sp"
                android:padding="24dp"
                android:gravity="center"
                android:text="Do we know you?"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_below="@id/image"
                android:textSize="24sp"
                android:gravity="center"
                android:padding="24dp"
                android:textColor="@color/primary"
                android:text="Log in to see your activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>
