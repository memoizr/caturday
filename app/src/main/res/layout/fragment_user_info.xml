<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:clipToPadding="false"
            android:paddingTop="@dimen/dashboard_scroll_padding"
            tools:context="com.caturday.app.capsules.profile.info.UserInfoFragment">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:orientation="vertical" >

            <RelativeLayout
                android:paddingTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/username_header"
                    android:paddingTop="8dp"
                    android:layout_marginLeft="56dp"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Username"/>

                <ImageView
                    android:padding="8dp"
                    android:tint="@color/black"
                    android:id="@+id/username_icon"
                    android:layout_below="@id/username_header"
                    android:src="@drawable/ic_person_white_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/username_TV"
                    android:paddingTop="12dp"
                    android:paddingBottom="8dp"

                    android:textColor="@color/black"
                    android:layout_below="@id/username_header"
                    android:layout_alignLeft="@id/username_header"
                    android:layout_toRightOf="@id/username_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>
