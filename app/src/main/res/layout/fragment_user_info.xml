<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="@dimen/dashboard_image_height"
            tools:context="com.caturday.app.capsules.profile.info.UserInfoFragment">

    <android.support.v7.widget.CardView
        android:layout_margin="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="vertical" >

        <RelativeLayout
            android:paddingTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/username_header"
                android:paddingTop="8dp"
                android:layout_marginLeft="56dp"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"/>

            <ImageView
                android:padding="8dp"
                android:tint="@color/black"
                android:id="@+id/username_icon"
                android:layout_below="@id/username_header"
                android:src="@drawable/ic_person_white_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/username_TV"
                android:paddingTop="12dp"
                android:paddingBottom="8dp"
                android:layout_below="@id/username_header"
                android:layout_alignLeft="@id/username_header"
                android:layout_toRightOf="@id/username_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <EditText
                android:visibility="invisible"
                android:layout_below="@id/username_header"
                android:layout_toRightOf="@id/username_icon"
                android:id="@+id/username_ET"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageButton
                android:id="@+id/edit_username"
                android:layout_alignTop="@id/username_TV"
                android:layout_alignRight="@id/username_TV"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_mode_edit_white_24dp"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

    <RelativeLayout
        android:paddingTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/email_header"
            android:paddingTop="8dp"
            android:layout_marginLeft="56dp"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"/>

        <ImageView
            android:padding="8dp"
            android:tint="@color/black"
            android:id="@+id/email_icon"
            android:layout_below="@id/email_header"
            android:src="@drawable/ic_email_white_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/email_TV"
            android:paddingTop="12dp"
            android:paddingBottom="8dp"
            android:layout_below="@id/email_header"
            android:layout_alignLeft="@id/email_header"
            android:layout_toRightOf="@id/email_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <EditText
            android:visibility="invisible"
            android:layout_below="@id/email_header"
            android:layout_toRightOf="@id/email_icon"
            android:id="@+id/email_ET"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageButton
            android:id="@+id/edit_email"
            android:layout_alignTop="@id/email_TV"
            android:layout_alignRight="@id/email_TV"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_mode_edit_white_24dp"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

        <RelativeLayout
            android:paddingTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/tagline_header"
                android:paddingTop="8dp"
                android:layout_marginLeft="56dp"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tagline"/>

            <ImageView
                android:padding="8dp"
                android:tint="@color/black"
                android:id="@+id/tagline_icon"
                android:layout_below="@id/tagline_header"
                android:src="@drawable/ic_person_white_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tagline_TV"
                android:paddingTop="12dp"
                android:paddingBottom="8dp"
                android:layout_below="@id/tagline_header"
                android:layout_alignLeft="@id/tagline_header"
                android:layout_toRightOf="@id/tagline_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <EditText
                android:visibility="invisible"
                android:layout_below="@id/tagline_header"
                android:layout_toRightOf="@id/tagline_icon"
                android:id="@+id/tagline_ET"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageButton
                android:id="@+id/edit_tagline"
                android:layout_alignTop="@id/tagline_TV"
                android:layout_alignRight="@id/tagline_TV"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_mode_edit_white_24dp"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

    </LinearLayout>
    </android.support.v7.widget.CardView>
</ScrollView>
