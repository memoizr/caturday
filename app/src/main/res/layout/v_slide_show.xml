<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/slide_show_container_V"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/slide_show_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      android:id="@+id/slide_show_page_0"
                      android:orientation="vertical"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent">

            <ImageView
                android:id="@+id/slide_show_image_view"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:tint="@color/dark_transparent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      android:id="@+id/slide_show_page_1"
                      android:orientation="vertical"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent">

            <ImageView
                android:id="@+id/slide_show_image_view"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:tint="@color/dark_transparent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />
        </LinearLayout>
    </android.support.v4.view.ViewPager>


    <View
        android:id="@+id/reveal_V"
        android:background="@color/accent"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</FrameLayout>